<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/teal_200"

    android:backgroundTintMode="add"
    android:id="@+id/Frame"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_surface"
        android:id="@+id/myLayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_s"
                android:layout_width="60dp"
                android:layout_height="40dp"

                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

                android:onClick="actionButton"
                android:src="@drawable/scan" />

            <EditText
                android:id="@+id/barcodeResultView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:hint="@string/barcodeResult"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_c"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:onClick="actionButton"
                android:text="C" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"

                android:hint="Unknown"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/second_a"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:onClick="launchSecondActivity"
                android:text="..." />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Qty"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_m"
                android:layout_width="60dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:onClick="actionButton"
                android:text="@string/minus" />

            <EditText
                android:id="@+id/editTextQty"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:text="1"

                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            `

            <Button
                android:id="@+id/button_p"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="actionButton"
                android:text="@string/plus" />`

            <TextView
                android:id="@+id/textViewStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/stock"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewStockLevel"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/orangeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_def"
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:onClick="actionButton"
                android:text="@string/def" />

            <Button
                android:id="@+id/button_list"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:onClick="actionButton"
                android:text="@string/list" />

            <Button
                android:id="@+id/button_shop"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:onClick="actionButton"
                android:text="@string/shop" />



            <ImageButton
                android:id="@+id/button_u"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:onClick="actionButton"
                android:src="@drawable/baseline_check_circle_48"
                tools:ignore="SpeakableTextPresentCheck" />


            <ImageButton
                android:id="@+id/button_f"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="find item"
                android:onClick="actionButton"
                android:src="@drawable/baseline_manage_search_48"
                tools:ignore="SpeakableTextPresentCheck" />


            <ImageButton
                android:id="@+id/button_d"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:onClick="actionButton"
                android:src="@drawable/baseline_delete_outline_48"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/chipshop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"></com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/purpleLayout"
            android:layout_width="wrap_content"
            android:layout_height="368dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"

            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orangeLayout">

            <ListView
                android:id="@+id/stocklist"
                android:layout_width="match_parent"
                android:layout_height="319dp"
                android:backgroundTintMode="screen"></ListView>

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>













